generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id          Int      @id @default(autoincrement())
  originalUrl String   // Asl uzun URL
  shortCode   String   @unique // Biz generatsiya qilgan qisqa kod (masalan: aX9zK)
  createdAt   DateTime @default(now())
  clicks      Int      @default(0) // Bonus: nechta odam kirganini sanash uchun

  @@map("urls") // Databaseda jadval nomi 'urls' bo'ladi
}
